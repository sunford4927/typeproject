{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      // "noImplicitAny": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,// JSON을 임포트 할수 있도록함
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }